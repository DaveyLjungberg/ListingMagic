# =============================================================================
# Listing Magic - Python Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your API keys

# -----------------------------------------------------------------------------
# AI Service API Keys
# -----------------------------------------------------------------------------

# OpenAI - GPT-4.1 Vision (listing descriptions + photo analysis)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_key_here

# Anthropic - Claude Sonnet 4.5 (video walk-thru scripts)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_key_here

# Google - Gemini 3 Pro (features & RESO data)
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_key_here

# -----------------------------------------------------------------------------
# Model Configurations
# -----------------------------------------------------------------------------

# OpenAI Model - GPT-4.1 with Vision (April 2025)
# Best for: Persuasive copy + automatic photo analysis
OPENAI_MODEL=gpt-4.1

# Anthropic Model - Claude Sonnet 4.5 (Latest)
# Best for: Natural-sounding narration for video scripts
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Gemini Model - Gemini 3 Pro (Nov 18, 2025)
# Best for: Fast, accurate structured data (features, RESO JSON)
GEMINI_MODEL=gemini-3-pro-latest

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://listingmagic.com,https://www.listingmagic.com

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (enables detailed error messages)
DEBUG=true

# API rate limiting (requests per minute per IP)
RATE_LIMIT=60

# -----------------------------------------------------------------------------
# File Storage
# -----------------------------------------------------------------------------

# Temporary file storage path
TEMP_STORAGE_PATH=./tmp

# Maximum upload size in MB
MAX_UPLOAD_SIZE_MB=50

# -----------------------------------------------------------------------------
# Cost Tracking
# -----------------------------------------------------------------------------

# Enable cost tracking for API usage
ENABLE_COST_TRACKING=true

# Cost alert threshold (USD) - log warning when exceeded
COST_ALERT_THRESHOLD=10.00
